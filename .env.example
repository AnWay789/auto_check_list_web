# --------------------------------------------------------------------------------------------------------
# Django
DEBUG=True
SECRET_KEY=django-secret-key
ALLOWED_HOSTS=localhost,127.0.0.1,web
DJANGO_URL=web:8000

DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin-password

# Внешний URL для генерации ссылок, доступных из браузера (для fake_url)
DJANGO_EXTERNAL_URL=localhost:8000

# Lighthouse → ELK (опционально): если заданы, результаты Lighthouse отправляются в ELK
ELK_URL=https://0.0.0.0:9200/bots-logs/_doc/
ELK_USER=elk_user
ELK_PASSWORD=elk_password
ELK_VERIFY_SSL=false

# Database
POSTGRES_DB=auto_check_list
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@db:5432/auto_check_list

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Telegram (Django → бот)
TELEGRAM_URL=telegram_bot:8001
TELEGRAM_BOT_TOKEN=telegram_token
TELEGRAM_CHAT_ID=telegram_chat_id

# Путь к проекту бота (для docker-compose)
TELEGRAM_PJ_PATH=../auto_check_list_bot

# Бот (FastAPI)
API_HOST=0.0.0.0
API_PORT=8001
DJANGO_EXTERNAL_HOST=127.0.0.1:8000
DJANGO_API_URL=http://localhost:8000
DJANGO_CALLBACK_ENDPOINT=/api/dashbord_colback/
